---
import SimpleLayout from "../../layouts/SimpleLayout.astro"
import challenge from "../../assets/img/challenge.jpg"
import { Image } from "astro:assets"
const challenges=[
	{title:'Announcement Bar', handle:'post-1', description:"This project is a great all-around test. You'll need good HTML to ensure accessible navigation. There are many tricky CSS details, and the game logic will test your JS.", level:1, stack:['html', 'css', 'javascript'], img: challenge},
	{title:'Upsell Carousel', handle:'upsell_carousel', description:"This project is a great all-around test. You'll need good HTML to ensure accessible navigation. There are many tricky CSS details, and the game logic will test your JS.", level:1, stack:['html', 'css', 'javascript'], img: challenge},
	{title:'View Transitions', handle:'view_transitions', description:"This project is a great all-around test. You'll need good HTML to ensure accessible navigation. There are many tricky CSS details, and the game logic will test your JS.", level:1, stack:['html', 'css', 'javascript'], img: challenge},
	{title:'Quick view', handle:'quick_view', description:"This project is a great all-around test. You'll need good HTML to ensure accessible navigation. There are many tricky CSS details, and the game logic will test your JS.", level:1, stack:['html', 'css', 'javascript'], img: challenge},
	{title:'Compare list', handle:'compare_list', description:"This project is a great all-around test. You'll need good HTML to ensure accessible navigation. There are many tricky CSS details, and the game logic will test your JS.", level:1, stack:['html', 'css', 'javascript'], img: challenge}
]
---
<SimpleLayout>
	<section>
		<h2 class="mv-wrapper text-2xl font-semibold mb-4">Challenges</h2>
		<article class="mv-wrapper grid grid-cols-3 gap-4">
			{challenges.map(item=>(
				<div class="p-2 border-2 rounded border-slate-200 bg-slate-50">
					<figure class="bg-slate-500 rounded shadow overflow-hidden mb-2">
					<Image src={item.img} loading="lazy" height={250} width={250} alt={item.title} class="w-full h-full object-cover"/>	
					</figure>
					<div class="py-2 ">
						<h3 class="text-2xl font-semibold mb-2"><a href={`challenges/${item.handle}`} class="text-slate-800 border-b-2 border-transparent hover:border-slate-950 hover:text-950 cursor-pointer transition-all duration-300">{item.title}</a></h3>
						<div class="flex justify-between mb-2">
						<ul class="flex space-x-2 ">
							{item.stack.map(tech=>(
								<li>{tech}</li>
							))}
						</ul>
						<span>{item.level}</span>
						</div>
						<h4>{item.description}</h4>
					</div>
				</div>
			))}
		</article>
	</section>
</SimpleLayout>