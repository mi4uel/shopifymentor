---
import SimpleLayout from "../layouts/SimpleLayout.astro";
import jumbotron from "../assets/img/jumbotron.jpg";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
const allChallenges = await getCollection("challenges");
---

<SimpleLayout>
  <section>
    <article class="grid grid-cols-1 gap-4 ">
        {allChallenges.map(item=>(
            <div class="p-2 border-2 rounded border-slate-200 bg-slate-50">
                <figure class="bg-slate-500 rounded shadow overflow-hidden mb-2 max-h-[400px] flex items-center">
                <Image src={item.data.image.url} loading="lazy" height={250} width={250} alt={item.data.title} class="w-full h-full object-cover object-center"/>	
                </figure>
                <div class="py-2 ">
                    <h3 class="text-2xl font-semibold mb-2"><a href={`/challenges/${item.slug}/`} class="text-slate-800 border-b-2 border-transparent hover:border-slate-950 hover:text-950 cursor-pointer transition-all duration-300">{item.data.title}</a></h3>
                    <div class="flex justify-between mb-2">
                    <ul class="flex space-x-2 ">
                        {item.data.stack.map(tech=>(
                            <li>{tech}</li>
                        ))}
                    </ul>
                    </div>
                    <h4>{item.data.description}</h4>
                </div>
            </div>
        ))}
    </article>
  </section>
</SimpleLayout>
